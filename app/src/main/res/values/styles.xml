<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRegistrationActionBar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#019644</item>
        <item name="android:datePickerStyle">@android:style/Widget.DatePicker</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>


    </style>

    <style name="MainScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:windowBackground">@drawable/ll_face_logo</item>

        <item name="android:textColorHint">@color/colorWhite</item>


    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#217c73</item>
        <item name="android:textColorPrimary">#0c0a0a</item>
        <item name="android:background">#b0adad</item>
    </style>

    <style name="FabCustom" parent="Widget.Design.FloatingActionButton">
        <item name="colorAccent">@color/colorRegistrationActionBar</item>
        <item name="colorPrimary">#019644</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorUnderline</item>
        <item name="colorControlActivated">@color/colorWhite</item>


    </style>

    <style name="TextLabelBlack" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorDefaultGreen</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorDefaultGreen</item>
        <item name="colorControlNormal">@color/colorDefaultGreen</item>
        <item name="colorControlActivated">@color/colorDefaultGreen</item>


    </style>

    <!--    Dashboard Main -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="colorAccent">#019644</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarA" parent="AppTheme">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorTabBackground</item>
        <item name="tabSelectedTextColor">@color/colorRegistrationActionBar</item>
        <item name="tabIndicatorColor">@color/colorRegistrationActionBar</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
    </style>


    <style name="UserProfileTab" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorTabBackground</item>
        <item name="tabSelectedTextColor">@color/colorRegistrationActionBar</item>
        <item name="tabIndicatorColor">@color/colorRegistrationActionBar</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
    </style>


    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorBlack</item>

        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="GreenButton" parent="AppTheme">

        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>


    <style name="ToolbarColoredSearchIcon" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorWhite</item>

    </style>

    <style name="myCustomMaterialButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/linear_layout_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:minHeight">35dip</item>
        <item name="android:minWidth">88dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>

    </style>

    <style name="PrimaryMaterialButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/linear_layout_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>


        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>

    </style>


    <style name="PopupMenu" parent="@android:style/Widget.Holo.Light.PopupMenu">


        <!--  <item name="android:popupBackground">@android:color/white</item>-->
    </style>


    <style name="ThemeSpinner">
        <!-- Color when pressed -->
        <item name="colorAccent">#999</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">#999</item>


    </style>


    <style name="SpinnerNew" parent="Base.Widget.AppCompat.Spinner">
        <!-- Color when pressed -->
        <item name="android:textColor">@color/colorWhite</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@color/colorWhite</item>


    </style>


    <style name="FullHeightDialog" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="ButtonBorder" parent="Widget.AppCompat.Button.Colored" />

    <style name="ButtonBorder.Accent">
        <item name="android:background">@color/colorTextRed</item>
    <item name="android:textColor">@color/colorWhite</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">16sp</item>
    <item name="android:singleLine">true</item>
</style>
    <style name="ButtonBorder.Accent.Green">
        <item name="android:background">@color/colorTextRed</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
    <!--    <style name="Autocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item_image_slider name="android:background">@color/colorWhite</item_image_slider>
        <item_image_slider name="colorControlNormal">@color/colorBlack</item_image_slider>
        <item_image_slider name="colorControlActivated">@color/colorUserProfileRed</item_image_slider>

    </style>-->
</resources>
