<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:elevation="10dp"
        app:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTextRed"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/TextVewDialogPCTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Show Interest "
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.chicsol.marrymax.widgets.faTextView
                        android:id="@+id/ButtonDialogPCDismiss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/fa_icon_cross"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LinearLayoutInterestsRequestsEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ImageViewInterestRequestEmptyState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_messages_empty_state" />

                    <!--  <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">-->
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/TextViewInterestRequestEmptyStateTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"

                        android:gravity="center"
                        android:text="Dear"
                        android:textColor="@color/colorTextRed" />

                    <!--  <android.support.v7.widget.AppCompatTextView
                          android:id="@+id/TextViewInterestRequestEmptyState"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="6dp"

                          android:gravity="center"
                          android:text="Please subscribe to send personalized message or view contact phone number."
                          android:textColor="@color/colorBlack" />-->
                    <!-- </LinearLayout>-->


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/TextViewInterestRequestEmptyStateMessageCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:gravity="center"
                        android:text="You have 1 unread messages"
                        android:textColor="@color/colorTextRed"
                        android:textSize="16sp"
                        android:visibility="gone" />


                    <LinearLayout
                        android:id="@+id/LinearLayoutEmptySubItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">


                    </LinearLayout>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/ButtonDialogPCSubscribe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Subscribe"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"

                        app:backgroundTint="@color/colorDefaultGreen" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/TextVewDialogPCDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />


                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/ButtonDialogPCButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:text="Complete"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"

                        app:backgroundTint="@color/colorDefaultGreen" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>