<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/LinearLayoutMessageDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2.3"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">


                <!--  <TextView
                      android:id="@+id/TextViewSubscriptionPlanName"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="right"

                      android:gravity="center"
                      android:text="SILVER"
                      android:textColor="@color/colorBlack"
                      android:textSize="20sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/TextViewSubscriptionPlanDuration"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"

                      android:gravity="center"

                      android:text="(3 Months)"
                      android:textColor="#7c7c7c"
                      android:textSize="15sp" />-->


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="10"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"

                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TextViewSubscriptionPlanName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="center"
                                android:text="SILVER"
                                android:textAllCaps="true"
                                android:textColor="@color/colorBlack"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/TextViewRecommendedP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" (Recommended) "
                                android:textColor="@color/colorBlack"
                                android:layout_gravity="center_vertical"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/TextViewSubscriptionPlanDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="  (3 Months)"
                                android:textColor="#7c7c7c"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TextViewSubscriptionPlanTitleDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SHAH_R7"
                                android:textColor="@color/colorUserProfileTextGreen"
                                android:textSize="18sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/TextViewSubscriptionPlanShortDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"

                                android:textColor="@color/colorSubscriptionDarkGrey"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/TextViewSubscriptionPlanShortDescriptionMatchesCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"

                                android:textColor="@color/colorSubscriptionDarkGrey"
                                android:textSize="15sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <!-- <android.support.v7.widget.AppCompatButton
                                 android:id="@+id/ButtonSubscriptionViewDetail"
                                 style="@style/Widget.AppCompat.Button.Borderless"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="View Detail"
                                 android:visibility="gone"
                                 android:textColor="@color/colorTextRed" />-->

                            <android.support.v7.widget.AppCompatButton

                                android:id="@+id/ButtonSubscriptionPurchase"
                                style="@style/Base.Widget.AppCompat.Button.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Purchase"
                                android:textColor="@color/colorWhite"
                                app:backgroundTint="@color/colorUserProfileRed" />


                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
