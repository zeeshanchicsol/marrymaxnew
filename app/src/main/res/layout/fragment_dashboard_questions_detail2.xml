<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutmessagedetailMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"

    tools:context=".fragments.inbox.DashboardQuestionsDetailActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_dashboard" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout3"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextViewMessageDetailAlias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:paddingTop="5dp"
                android:text="AbdulIrfan"
                android:textColor="@color/colorUserProfileRed"
                android:textSize="@dimen/text_size_up_h2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextViewMessageDetailAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="(22 Years)"
                android:textColor="#7c7c7c"
                android:textSize="@dimen/text_size_mymatches_desc2" />

            <LinearLayout
                android:id="@+id/LinearLayoutMessageDetailDeleteChat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"
                android:visibility="visible">

                <com.chicsol.marrymax.widgets.faTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="@string/fa_icon_delete"
                    android:textColor="@color/colorTextRed"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/TextViewUserProfileDeleteMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="Delete Questions"
                    android:textColor="@color/colorUserProfileRed"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayoutMessageDetailData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"

        android:orientation="horizontal">

        <!--   <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent" />-->

        <TextView
            android:id="@+id/TextViewMessageDetailLivingCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Pakistan |"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <com.chicsol.marrymax.widgets.mTextView
            android:id="@+id/TextViewMessageDetailMaritalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Never Married"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />


        <com.chicsol.marrymax.widgets.mTextView
            android:id="@+id/TextViewMessageDetailEthnicbg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urdu Speaking"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <com.chicsol.marrymax.widgets.mTextView
            android:id="@+id/TextViewMessageDetailReligious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sunni"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayoutMMessagesReadQuota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayoutMessageDetailData"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone"

        >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">


                        <TextView
                            android:id="@+id/TextViewReadQuotaHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 unread messages from SHAHEEN"
                            android:textColor="@color/colorBlack"

                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TextViewReadQuotaSubHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Dear AABBAABB, your free message quota is exhausted"
                            android:textColor="@color/colorUserProfileTextGreen" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:gravity="center">

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/ButtonMessageDetailSubscribe"
                            style="@style/myCustomMaterialButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onSubscribeClick"
                            android:text="Subscribe"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            app:backgroundTint="@color/colorUserProfileRed" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/LinearLayoutMMessagesReadQuota"

        android:paddingTop="@dimen/activity_vertical_margin"
        android:theme="@style/AppTheme">

        <!--<android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.CardView>-->

        <LinearLayout
            android:id="@+id/asdsaasddfasd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/TextViewQuestionDetailSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/colorTextRed"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerViewMessageListChatMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/asdsaasddfasd"
            android:layout_marginBottom="55dp"
            android:background="@color/colorWhite">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"

            android:orientation="horizontal"


            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="10">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/ButtonSendAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorTextRed"
                android:text="Send"
                android:textColor="@color/colorWhite" />


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
