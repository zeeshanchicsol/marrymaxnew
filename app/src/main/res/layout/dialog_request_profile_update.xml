<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:elevation="10dp"
        app:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTextRed"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <com.chicsol.marrymax.widgets.mTextView
                        android:id="@+id/TextViewRequestDialogTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Request A Profile Change "
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.chicsol.marrymax.widgets.faTextView
                        android:id="@+id/faButtonRequestdismiss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/fa_icon_cross"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--    <com.chicsol.marrymax.widgets.mTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="9dp"
                                android:text="Country of Living"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/reg_tv_heading"
                                android:textStyle="bold" />-->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_margin="15dp"
                            android:orientation="vertical">

                            <com.chicsol.marrymax.widgets.mTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Attribute"
                                android:textColor="@color/colorSpinnerLabel"
                                android:textSize="@dimen/text_size_spinner_label" />

                            <android.support.v7.widget.AppCompatSpinner
                                android:id="@+id/spinnerRequestProfileChangeAttribute"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorRegistrationCheckRadio"
                                app:backgroundTint="#999"

                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:background="#d7d7d7"></View>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_margin="15dp"
                            android:orientation="vertical">

                            <com.chicsol.marrymax.widgets.mTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Value"
                                android:textColor="@color/colorSpinnerLabel"
                                android:textSize="@dimen/text_size_spinner_label" />

                            <android.support.v7.widget.AppCompatSpinner
                                android:id="@+id/spinnerRequestProfileChangeValue"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorRegistrationCheckRadio"
                                app:backgroundTint="#999"

                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:background="#d7d7d7"></View>


                        </LinearLayout>


                        <com.chicsol.marrymax.widgets.mTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Please describe the reason, (e.g, Selected by Mistake; System Error etc)"
                            android:textColor="@color/colorSpinnerLabel"
                            android:textSize="@dimen/text_size_spinner_label" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/EditTextReportConcernDialgTextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">

                            <com.chicsol.marrymax.widgets.mEditText

                                android:id="@+id/EditTextReportConcernDialgOtherReason"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Reason Here"
                                android:imeOptions="actionDone"
                                android:inputType="text"
                                android:maxLength="200" />
                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/mButtonDialogRequest"
                        style="@style/myCustomMaterialButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        app:backgroundTint="@color/colorDefaultGreen" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>