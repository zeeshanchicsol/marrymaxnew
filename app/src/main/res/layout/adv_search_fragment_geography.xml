<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"

        >


        <com.chicsol.marrymax.widgets.mTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size_adv_search_headings"

            android:text="Visa Status"
            android:textColor="@color/colorUserProfileRed"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/LinearLayoutAdvSearchVisaStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#d7d7d7"></View>

        <com.chicsol.marrymax.widgets.mTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:text="Country"
            android:textSize="@dimen/text_size_adv_search_headings"

            android:textColor="@color/colorUserProfileRed"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/LinearLayoutAdvSearchCountries"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerViewAdvSearchItemCountries"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#d7d7d7"></View>

        <com.chicsol.marrymax.widgets.mTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textSize="@dimen/text_size_adv_search_headings"

            android:layout_marginTop="10dp"
            android:text="State"
            android:textColor="@color/colorUserProfileRed"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/LinearLayoutAdvSearchStates"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <com.chicsol.marrymax.widgets.mTextView
                android:id="@+id/TextViewAdvSearchStateError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=" States will be populated on selecting country."
                android:textColor="@color/colorDefaultGreen" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerViewAdvSearchItemStates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#d7d7d7"></View>

        <com.chicsol.marrymax.widgets.mTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size_adv_search_headings"

            android:text="City"
            android:textColor="@color/colorUserProfileRed"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/LinearLayoutAdvSearchCities"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <com.chicsol.marrymax.widgets.mTextView
                android:id="@+id/TextViewAdvSearchCityError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=" Cities will be populated on selecting states. Cities available for pakistan only."
                android:textColor="@color/colorDefaultGreen" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerViewAdvSearchItemCities"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
