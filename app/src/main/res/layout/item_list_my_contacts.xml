<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"

    >

    <LinearLayout
        android:id="@+id/LinearLayoutAdvSearchItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"


        >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/ImageViewListContactImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_dash_main_profile"
                    android:padding="1dp"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />

                        <com.chicsol.marrymax.widgets.mTextView
                            android:id="@+id/TextViewListUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UserName"
                            android:textColor="@color/colorTextRed"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <com.chicsol.marrymax.widgets.mTextView
                            android:id="@+id/TextViewListAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(24 years)"
                            android:textColor="#333333"

                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayoutAccountSettingMyContactPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.chicsol.marrymax.widgets.mTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Number:  "
                            android:textColor="#333333"
                            android:textStyle="bold" />

                        <com.chicsol.marrymax.widgets.mTextView
                            android:id="@+id/TextViewListPhoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 03228686090"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayoutAccountSettingMyContactCallTime"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.chicsol.marrymax.widgets.mTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call Time:  "
                            android:textColor="#333333" />

                        <com.chicsol.marrymax.widgets.mTextView
                            android:id="@+id/TextViewMyContactListCallTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 03221234"
                            android:textColor="#333333" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <!--      <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                android:gravity="center"
                      android:layout_weight="3">

                      <com.chicsol.marrymax.widgets.mTextView
                          android:id="@+id/TextViewListDate"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="03 Jul, 2016"
                          android:textColor="#333333" />

                  </LinearLayout>-->

            <!-- <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:orientation="horizontal">


             </LinearLayout>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eee"

            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.chicsol.marrymax.widgets.mTextView
                    android:id="@+id/TextViewListDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:text="03 Jul, 2016"
                    android:textColor="#333333" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <com.chicsol.marrymax.widgets.faTextView
                    android:id="@+id/faTextViewMyContactItemFeedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/fa_icon_feedback"
                    android:textColor="#777"
                    android:textSize="18sp"
                    android:layout_marginLeft="4dp"

                    android:visibility="gone"

                    />

            <!--    <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="#888"></View>-->


                <com.chicsol.marrymax.widgets.faTextView
                    android:id="@+id/faTextViewMyContactItemRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/fa_icon_remove"
                    android:textColor="#777"
                    android:textSize="18sp"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

