<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CardViewDashMainFeedbackPending"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextViewDashMainFeedbackPending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Dear,sadadas  your Feedback is Pending"
            android:textColor="@color/colorDashboardMainNormalText"

            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/ButtonDashMainFeedbackPending"
            style="@style/myCustomMaterialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:text="Give Feedback"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />


    </LinearLayout>

</android.support.v7.widget.CardView>