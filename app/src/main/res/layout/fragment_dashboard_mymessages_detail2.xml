<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutmessagedetailMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustPan|adjustResize"
    tools:context=".fragments.inbox.DashboardMessagesDetailActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_dashboard" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:orientation="vertical">

        <include
            layout="@layout/progressbar"
            android:visibility="gone"></include>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextViewMessageDetailAlias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:paddingTop="5dp"
                android:text="AbdulIrfan"
                android:textColor="@color/colorUserProfileRed"
                android:textSize="@dimen/text_size_up_h2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextViewMessageDetailAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="(22 Years)"
                android:textColor="#7c7c7c"
                android:textSize="@dimen/text_size_mymatches_desc2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

         <!--       <LinearLayout
                    android:id="@+id/LinearLayoutMessageDetailFeedback"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="3dp"
                    android:clickable="true"
                    android:gravity="right|center_vertical"
                    android:visibility="gone">

                    <com.chicsol.marrymax.widgets.faTextView
                        android:id="@+id/faUserProfileFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:gravity="center"
                        android:text="@string/fa_icon_feedback"
                        android:textColor="@color/colorTextRed"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/TextViewUserProfileFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="Give Feedback"
                        android:textColor="@color/colorUserProfileRed"
                        android:textSize="13sp" />

                </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/LinearLayoutMessageDetailDeleteChat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:gravity="right|center_vertical"
                    android:visibility="gone">

                    <com.chicsol.marrymax.widgets.faTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:gravity="center"
                        android:text="@string/fa_icon_delete"
                        android:textColor="@color/colorTextRed"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/TextViewUserProfileDeleteMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="Delete"
                        android:textColor="@color/colorUserProfileRed"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/LinearLayoutMessageDetailData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"

       >

        <!--   <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent" />-->

        <TextView
            android:id="@+id/TextViewMessageDetailLivingCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Pakistan |"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <com.chicsol.marrymax.widgets.mTextView
            android:id="@+id/TextViewMessageDetailMaritalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Never Married"
            android:layout_toRightOf="@+id/TextViewMessageDetailLivingCountry"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />
        <com.chicsol.marrymax.widgets.mTextView
            android:id="@+id/TextViewMessageDetailEducationTypes"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/TextViewMessageDetailMaritalStatus"
            android:layout_height="wrap_content"
            android:text="asdfsdfsd ssdf sd fsd "
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <com.chicsol.marrymax.widgets.mTextView
            android:id="@+id/TextViewMessageDetailEthnicbg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urdu Speaking"
            android:layout_toRightOf="@+id/TextViewMessageDetailEducationTypes"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <com.chicsol.marrymax.widgets.mTextView
            android:id="@+id/TextViewMessageDetailReligious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextViewMessageDetailMaritalStatus"
            android:layout_marginLeft="10dp"
            android:text=" Sunni"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />


    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/LinearLayoutMessageDetailData"
        android:id="@+id/LinearLayoutMessageDetailFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"
        android:clickable="true"
        android:gravity="right|center_vertical"
        android:visibility="gone">

        <com.chicsol.marrymax.widgets.faTextView
            android:id="@+id/faUserProfileFeedback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="@string/fa_icon_feedback"
            android:textColor="@color/colorTextRed"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/TextViewUserProfileFeedback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="Give Feedback"
            android:textColor="@color/colorUserProfileRed"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutMMessagesReadQuota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayoutMessageDetailData"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone"

        >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/ImageViewInterestRequestEmptyState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_messages_empty_state" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">


                        <TextView
                            android:id="@+id/TextViewReadQuotaHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 unread messages from SHAHEEN"
                            android:textColor="@color/colorBlack"

                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TextViewReadQuotaSubHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="Dear AABBAABB, your free message quota is exhausted"
                            android:textColor="@color/colorUserProfileTextGreen" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayoutEmptySubItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:orientation="vertical"></LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:gravity="center">

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/ButtonMessageDetailSubscribe"
                            style="@style/myCustomMaterialButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onSubscribeClick"
                            android:text="Subscribe"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            app:backgroundTint="@color/colorUserProfileRed" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LinearLayoutMMessagesReadQuota"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"


        android:paddingTop="@dimen/activity_vertical_margin">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerViewMessageListChatMain"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@color/colorUserProfileRed"
            android:orientation="horizontal"


            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:weightSum="10">

            <EditText
                android:id="@+id/EditTextChatListsendMessageDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="4dp"
                android:layout_weight="8.8"
                android:maxLength="2000"

                android:hint="Type Something..."
                android:lines="2"

                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textSize="13sp" />

            <FrameLayout
                android:id="@+id/FrameLayoutChatListSendMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:layout_marginRight="5dp"

                android:layout_weight="1.2"
                android:clickable="true">

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:backgroundTint="@color/colorWhite"
                    app:elevation="0dp"
                    app:fabSize="auto" />

                <com.chicsol.marrymax.widgets.faTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="1dp"
                    android:gravity="center"
                    android:text="@string/fa_icon_send"
                    android:textColor="@color/colorUserProfileTextGreen"
                    android:textSize="18sp"
                    app:elevation="7dp" />

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
