<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"

    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/LinearlayoutChatListTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <com.chicsol.marrymax.widgets.RoundedImageView
            android:id="@+id/RoundedImageViewChatListUserImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorUserProfileMessageIn"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/TextViewChatListText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextViewChatListDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorUserProfileTextGreen"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearlayoutChatListSelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorUserProfileMessageOut"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/TextViewChatListText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextViewChatListDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorUserProfileTextGreen"
                android:textSize="10sp" />

        </LinearLayout>

        <com.chicsol.marrymax.widgets.RoundedImageView
            android:id="@+id/RoundedImageViewChatListUserImage1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"

            android:src="@drawable/ic_sentiment_satisfied_white_24dp" />


    </LinearLayout>
</LinearLayout>