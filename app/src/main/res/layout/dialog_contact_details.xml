<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:elevation="10dp"
        app:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTextRed"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <com.chicsol.marrymax.widgets.mTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Contact Details "
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.chicsol.marrymax.widgets.faTextView
                        android:id="@+id/faButtonContactDialogDismiss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/fa_icon_cross"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <include layout="@layout/itemview_feedback_pending"></include>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <com.chicsol.marrymax.widgets.mTextView
                        android:id="@+id/TextViewContactDialogTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="asdasdsad"
                        android:textColor="@color/colorBlack" />


                    <TableLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:stretchColumns="*">

                        <TableRow
                            android:background="#30808080"
                            android:padding="5dp">

                            <com.chicsol.marrymax.widgets.mTextView
                                android:text="Contact Name: "
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold" />

                            <com.chicsol.marrymax.widgets.mTextView
                                android:id="@+id/TextViewContactDialogContactName"

                                android:textColor="@color/colorBlack" />

                        </TableRow>

                        <TableRow
                            android:layout_marginTop="4dp"

                            android:padding="5dp">

                            <com.chicsol.marrymax.widgets.mTextView

                                android:text="Mobile Number: "
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold" />

                            <com.chicsol.marrymax.widgets.mTextView
                                android:id="@+id/TextViewContactDialogMobileNumber"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:textColor="@color/colorBlack" />

                        </TableRow>

                        <TableRow
                            android:layout_marginTop="4dp"

                            android:background="#30808080"
                            android:padding="5dp">

                            <com.chicsol.marrymax.widgets.mTextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Relationship: "
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold" />

                            <com.chicsol.marrymax.widgets.mTextView
                                android:id="@+id/TextViewContactDialogRelationship"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:textColor="@color/colorBlack" />
                        </TableRow>

                        <TableRow
                            android:layout_marginTop="4dp"
                            android:padding="5dp">

                            <com.chicsol.marrymax.widgets.mTextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Preffered Call Time: "
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold" />


                            <com.chicsol.marrymax.widgets.mTextView
                                android:id="@+id/TextViewContactDialogPrefferedCallTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:textColor="@color/colorBlack" />

                        </TableRow>


                        <TableRow
                            android:layout_marginTop="4dp"

                            android:background="#30808080"
                            android:padding="5dp">

                            <com.chicsol.marrymax.widgets.mTextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Country Name: "
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold" />

                            <com.chicsol.marrymax.widgets.mTextView
                                android:id="@+id/TextViewContactDialogCountryName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:textColor="@color/colorBlack" />
                        </TableRow>

                    </TableLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right">
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/mButtonInterestGiveFeedback"
                            style="@style/myCustomMaterialButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="Give Feedback "
                            android:visibility="gone"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            app:backgroundTint="@color/colorDefaultGreen" />
                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/ButtonContactDialogCancel"
                        style="@style/myCustomMaterialButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:contentDescription="this is desc"
                        android:elevation="5dp"
                        android:text="Close"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        app:backgroundTint="@color/colorDefaultGreen" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>