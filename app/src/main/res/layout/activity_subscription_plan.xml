<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDashboardBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/ProgressbarSubscriptionPlan"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="2dp"
            android:indeterminate="true"

            android:indeterminateTint="@color/colorUserProfileRed"
            android:indeterminateTintMode="src_in" />

        <LinearLayout
            android:id="@+id/LinearLayoutSubscriptionPlanNotFound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            android:orientation="vertical"
            android:visibility="gone"

            >


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_no_result_found" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">


                            <com.chicsol.marrymax.widgets.mTextView
                                android:id="@+id/mTextView14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="There are no Saved Contacts."
                                android:textColor="#272a30"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.chicsol.marrymax.widgets.mTextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Find Matches &amp; View Contact Details "
                                android:textColor="@color/colorUserProfileTextGreen" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:gravity="center">

                            <android.support.v7.widget.AppCompatButton
                                android:id="@+id/ButtonMyContatsSearch"
                                style="@style/myCustomMaterialButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Go To Search"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                app:backgroundTint="@color/colorUserProfileRed" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Subscribe now to connect with your potential matches immediately."
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <!-- <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="8dp"

             android:text="That is Right For You"
             android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
             android:textColor="@color/colorBlack" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/LinearLayoutMessageDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="2.3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/TextViewSubscriptionPlanName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:text="Free"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TextViewSubscriptionPlanDuration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:text="(Unlimited)"
                            android:textColor="#7c7c7c"
                            android:textSize="15sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="7.7"
                        android:orientation="vertical">


                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="2dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="4dp"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/TextViewRecommendedMatchDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="5dp"
                                    android:text=""
                                    android:textColor="@color/colorBlack"
                                    android:textSize="9sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/TextViewSubscriptionPlanTitleDetail"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Members"
                                        android:textColor="@color/colorTextRed"
                                        android:textSize="17sp" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"

                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="- Free Registrations"
                                        android:textColor="@color/colorSubscriptionDarkGrey"
                                        android:textSize="15sp" />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="- Free Communication "
                                        android:textColor="@color/colorSubscriptionDarkGrey"
                                        android:textSize="15sp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="8dp"
                                    android:orientation="horizontal">


                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="- Free Search "
                                        android:textColor="@color/colorSubscriptionDarkGrey"
                                        android:textSize="15sp" />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="- No Credit Card Required "
                                        android:textColor="@color/colorSubscriptionDarkGrey"
                                        android:textSize="15sp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:orientation="horizontal">

                                    <!-- <android.support.v7.widget.AppCompatButton
                                         android:id="@+id/ButtonSubscriptionViewDetail"
                                         style="@style/Widget.AppCompat.Button.Borderless"
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:text="View Detail"
                                         android:visibility="gone"
                                         android:textColor="@color/colorTextRed" />-->


                                </LinearLayout>


                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerViewSubscriptionPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            />


        <android.support.v7.widget.CardView
            android:id="@+id/CardViewAmenities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center"
                        android:text=" Subscribe Now to Maximize Your Options"
                        android:textColor="@color/colorTextRed"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center"
                        android:text=" Some of the subscription benefits are ..."
                        android:textSize="13sp"

                        />

                    <com.chicsol.marrymax.widgets.GridRecyclerView
                        android:id="@+id/RecyclerViewOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:padding="5dp">


                    </com.chicsol.marrymax.widgets.GridRecyclerView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For package details, "
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/TextViewSubscriptionPlanPackages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text=" click here  "
                        android:textColor="@color/colorTextRed"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="to view at marrymax.com"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:text="  How committed are you to yourself ?"
                        android:textColor="@color/colorTextRed"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:text="@string/subscription_plan_commited_text"
                        android:textColor="#666"


                        />

                    <!--  <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:clickable="true"
                          android:gravity="left"
                          android:lineSpacingExtra="5dp"
                          android:text="Most people want stuff that's free. But if you get something for free, you rarely prize that thing. You rarely take it seriously."
                          android:textColor="@color/colorBlack"
                          android:textSize="13sp"

                          />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="5dp"
                          android:clickable="true"
                          android:gravity="left"
                          android:lineSpacingExtra="5dp"
                          android:text="How much do you invest in yourself?"
                          android:textColor="@color/colorBlack"
                          android:textSize="13sp"


                          />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:clickable="true"
                          android:gravity="left"
                          android:lineSpacingExtra="5dp"
                          android:text="If you aren't investing in yourself, than you don't have any skin in the game of your own life."
                          android:textColor="@color/colorBlack"
                          android:textSize="13sp"

                          />-->

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <!--<android.support.v7.widget.AppCompatButton

            android:id="@+id/SubscriptionPlanPackageDetails"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="For package details, click here to view at marrymax.com"
            android:textColor="@color/colorTextRed" />-->

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>