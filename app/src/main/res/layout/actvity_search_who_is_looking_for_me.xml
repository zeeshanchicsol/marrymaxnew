<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".activities.searchyourbestmatch.SearchYourBestMatchActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="vertical">

        <com.chicsol.marrymax.widgets.mTextView
            android:id="@+id/TextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tell us about your self &amp; we let you know how many potential matches are looking for you."
            android:textColor="@color/colorRegistrationFields"
            android:textSize="@dimen/reg_title_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginTop="5dp"
        android:layout_weight="8.5"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorWhite"
                app:cardElevation="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"

                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp">


                        <LinearLayout
                            android:id="@+id/LinearLayoutMaleSelected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/gendercheckboxborderselected"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="9dp"
                            android:paddingTop="9dp"
                            android:visibility="gone">


                            <com.chicsol.marrymax.widgets.faTextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fa_icon_male"
                                android:textColor="@color/colorWhite" />

                            <com.chicsol.marrymax.widgets.mTextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="Groom"
                                android:textColor="@color/colorWhite" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayoutMaleNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/gendercheckboxbordernormal"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="9dp"

                            android:paddingTop="9dp">


                            <com.chicsol.marrymax.widgets.faTextView
                                android:id="@+id/tv_fa_male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fa_icon_male"
                                android:textColor="@color/colorBlack" />

                            <com.chicsol.marrymax.widgets.mTextView
                                android:id="@+id/TextViewMale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="Male"
                                android:textColor="@color/colorBlack" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayoutFemaleNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/gendercheckboxbordernormal"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="9dp"

                            android:paddingTop="9dp">


                            <com.chicsol.marrymax.widgets.faTextView
                                android:id="@+id/tv_fa_female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fa_icon_female"
                                android:textColor="@color/colorBlack" />

                            <com.chicsol.marrymax.widgets.mTextView
                                android:id="@+id/TextViewFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Female"

                                android:textColor="@color/colorBlack" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayoutFemaleSelected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/gendercheckboxborderselected"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="9dp"
                            android:paddingTop="9dp"
                            android:visibility="gone">


                            <com.chicsol.marrymax.widgets.faTextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fa_icon_female"
                                android:textColor="@color/colorWhite" />

                            <com.chicsol.marrymax.widgets.mTextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Female"

                                android:textColor="@color/colorWhite" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <!--      <com.chicsol.marrymax.widgets.mTextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_margin="10dp"
                                  android:text="My Choice Age"
                                  android:textColor="@android:color/black"
                                  android:textSize="16sp"
                                  android:textStyle="bold" />-->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.chicsol.marrymax.widgets.mTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="My Age"
                                    android:textColor="@color/colorSpinnerLabel"
                                    android:textSize="@dimen/text_size_spinner_label" />

                                <Spinner
                                    android:id="@+id/SpinnerAppMyChoiceAgeFrom"
                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"

                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"

                                    android:layout_marginBottom="5dp"
                                    android:background="#d7d7d7"></View>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <com.chicsol.marrymax.widgets.mTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Religion"
                            android:textColor="@color/colorSpinnerLabel"
                            android:textSize="@dimen/text_size_spinner_label" />

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/sp_bestmatch_religion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="#d7d7d7"

                            ></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <com.chicsol.marrymax.widgets.mTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Religious Sect"
                            android:textColor="@color/colorSpinnerLabel"
                            android:textSize="@dimen/text_size_spinner_label" />

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/sp_bestmatch_religious_sect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="#d7d7d7"

                            ></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <com.chicsol.marrymax.widgets.mTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ethnic background"
                            android:textColor="@color/colorSpinnerLabel"
                            android:textSize="@dimen/text_size_spinner_label" />

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/sp_bestmatch_ethnic_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="#d7d7d7"

                            ></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <com.chicsol.marrymax.widgets.mTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Education"
                            android:textColor="@color/colorSpinnerLabel"
                            android:textSize="@dimen/text_size_spinner_label" />

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/sp_bestmatch_education"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="#d7d7d7"

                            ></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <com.chicsol.marrymax.widgets.mTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Country"
                            android:textColor="@color/colorSpinnerLabel"
                            android:textSize="@dimen/text_size_spinner_label" />

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/sp_bestmatch_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="#d7d7d7"

                            ></View>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">


                        <Button

                            android:id="@+id/buttonSearchMatches"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#216917"
                            android:text="Search Matches"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="21sp"

                            />
                    </LinearLayout>


                    <!--                    <com.chicsol.marrymax.widgets.mTextView
                                            android:id="@+id/TextViewRegisterNewActivity"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="15dp"
                                            android:text="Login / Register New Account"
                                            android:textColor="@color/colorRegistrationStepOnGoing" />-->


                </LinearLayout>


            </android.support.v7.widget.CardView>
        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">


        <com.chicsol.marrymax.widgets.mButton2
            android:id="@+id/ButtonBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:text="Back To Home Page"
            android:textAllCaps="false"
            android:textColor="@color/colorRegistrationInputField" />
    </LinearLayout>

</LinearLayout>