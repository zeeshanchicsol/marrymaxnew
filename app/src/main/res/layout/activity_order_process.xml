            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"

                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">


                    <RadioGroup
                        android:id="@+id/RadioGroupOrderProcessMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:text="Online Payment Method"
                            android:textColor="@color/colorTextRed"
                            android:textSize="19sp" />


                        <RadioButton
                            android:id="@+id/radioOrderProcessStripe"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:drawableTop="@drawable/ic_creditcard" />


                        <LinearLayout
                            android:id="@+id/LinearlayoutOrderProcessCCDetailView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.stripe.android.view.CardInputWidget
                                android:id="@+id/card_input_widget"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <Button
                                android:id="@+id/ButtonPayThroughCreditCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"

                                android:backgroundTint="@color/colorTextRed"
                                android:text="Make Payment"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:text="Once payment is received, marrymax support will contact to verify payment details."
                                android:textSize="12sp" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="Offline Payment Methods"
                            android:textColor="@color/colorTextRed"
                            android:textSize="19sp" />


                        <RadioButton

                            android:id="@+id/RadioButtonOrderProcessWesternUnion"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableTop="@drawable/ic_western"

                            android:gravity="top" />


                        <LinearLayout

                            android:id="@+id/LinearlayoutOrderProcessWDetailView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Pay using Western Union money transfer (Step - 2 of 2) "
                                android:textColor="@color/colorTextRed"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/OrderNumber1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"

                                android:textColor="@color/colorTextRed" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lineSpacingExtra="5dp"
                                android:text="@string/wu_subscription_plan_web"
                                android:textColor="@color/colorBlack" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lineSpacingExtra="5dp"
                                android:text="@string/wu_subscription_plan_mem_support_service"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lineSpacingExtra="5dp"
                                android:text="@string/wu_subscription_plan_mem_support_email"
                                android:textColor="@color/colorBlack" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginTop="5dp"
                                android:background="@color/colorGrey"></View>


                        </LinearLayout>


                        <RadioButton
                            android:id="@+id/RadioButtonOrderProcessEasyPasa"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableTop="@drawable/ic_easypasa"
                            android:gravity="top" />


                        <LinearLayout

                            android:id="@+id/LinearlayoutOrderProcessEasypasaView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Pay Using Telenor Easypaisa (Step - 2 of 2) (Pakistan Only)"
                                android:textColor="@color/colorTextRed"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/OrderNumber2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"

                                android:textColor="@color/colorTextRed" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lineSpacingExtra="5dp"
                                android:text="@string/ep_desc"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" " />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lineSpacingExtra="5dp"
                                android:text="@string/ep_desc2"
                                android:textColor="@color/colorBlack" />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginTop="5dp"
                                android:background="@color/colorGrey"></View>


                        </LinearLayout>


                        <RadioButton
                            android:id="@+id/RadioButtonOrderProcessABL"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:drawableTop="@drawable/ic_abl" />

                        <LinearLayout

                            android:id="@+id/LinearlayoutOrderProcessABL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Pay in Bank Account (Step - 2 of 2) (Pakistan Only)"
                                android:textColor="@color/colorTextRed"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/OrderNumber3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"

                                android:textColor="@color/colorTextRed" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lineSpacingExtra="5dp"

